<div class="container">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  placeholder: "jean.bouteille@email.com",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "input-style" } %>
      <%= f.input :password,
                  placeholder: "ton mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password", class: "input-style" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

  <div class="container elmt-center">
    <div class="form-actions">
      <%= f.button :submit, "Connexion", class: "btn-gradient-rose" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>

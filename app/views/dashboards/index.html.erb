<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <li class="active">
    <a class="nav-link" data-toggle="tab" href="#profil">Mes bières</a>
  </li>
  <li>
    <a class="nav-link" data-toggle="tab" href="#menu1">Mes stats</a>
  </li>
</ul>
<!-- Fin Nav tabs -->

<!-- Nav tabs content-->
<div class="tab-content">
  <div id="profil" class="tab-pane fade active show">
    <!-- Mes bières-->

    <div style="margin: 50px"></div>
    <div style="margin: 50px"></div>
     <div style="text-align: center">
    <p> Aujourd'hui 18h00 - 20h00</p>
    </div>


    <div class="all-cards-dashboard">
      <%@bar_beers.each do |bar_beer| %>
        <div class="card">
          <!--<%= link_to board_path(board), class: 'link' do %>-->
              <h5 class="card-title"><%= bar_beer.beer.name%> </h5>
              <p class="card-text"><%= bar_beer.beer.category%> | <%= bar_beer.beer.alcohol_degree%>°</p>
                <%= link_to bar_bar_beer_path(bar_beer), method: :delete, data: { confirm: 'Tu veux supprimer ta bière ?' }, class: 'card-remove-link' do %>
                <i class="fas fa-times" style="color: grey"></i>
                <%end%>
                <%= link_to edit_bar_bar_beer_path(bar_beer), class: "card-edit-link" do %>
                <i class="fas fa-edit" style="color: grey"></i>
                <%end%>
          <% end %>
        </div>
      <% end %>
    </div>

    <div style="margin: 50px"></div>
  </div>

  <div id="menu1" class="tab-pane fade">
    <!-- Mes Stats -->
    <div style="margin: 50px"></div>



      <div style="margin: 50px"></div>
  </div>




</div>
<!-- Fin Nav tabs content-->

</div>



